          border: none;
      }
  input:focus {
          outline-color: purple; 
          border-style: solid;
          color:rgb(99, 59, 134); 
      }
  input::placeholder {
          color: rgb(99, 59, 134); 
      }
      
  button {
          margin-top: 20px;
          height: 50px;
          width: 50px;
          border-radius: 10px;
          background-color: white; 
          color: rgb(99, 59, 134); 
          border-color:rgb(99, 59, 134);
          border-style: solid;
          cursor: pointer;
      }
  
  p.short {
          font-size: 30px;
          border-style: solid; 
          border-color: rgb(99, 59, 134);
          border-radius: 15px;
